---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';
import type { Testimonials as Props } from '~/types';
import '~/styles/testimonials.css';

const {
  title = '',
  subtitle = '',
  tagline = '',
  testimonials = [],
  variant = 'grid',
  callToAction,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const layoutClasses: Record<string, string> = {
  grid: 'testimonial-grid',
  'grid-2': 'testimonial-grid-2',
  masonry: 'testimonial-masonry',
  minimal: 'testimonial-grid',
};

const layoutClass = layoutClasses[variant] ?? layoutClasses.grid;
const cardClass = variant === 'minimal' ? 'testimonial-card testimonial-card-minimal' : 'testimonial-card';
const cardWrapperClass = variant === 'masonry' ? 'testimonial-masonry-item' : '';
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  <div class={layoutClass}>
    {
      testimonials &&
        testimonials.map(({ title, testimonial, name, job, image }) => (
          <article class={`${cardWrapperClass} ${cardClass}`}>
            {title && <h2 class="text-lg font-medium leading-6 pb-4">{title}</h2>}
            {testimonial && <p class="testimonial-content">“{testimonial}”</p>}

            <div class="mt-4 flex items-center">
              {image && (
                <div class="testimonial-avatar testimonial-avatar-show testimonial-avatar-md rounded-full overflow-hidden">
                  {typeof image === 'string' ? (
                    <Fragment set:html={image} />
                  ) : (
                    <Image class="h-full w-full rounded-full object-cover" width={64} height={64} layout="fixed" {...image} />
                  )}
                </div>
              )}

              <div class="testimonial-author ml-3 rtl:ml-0 rtl:mr-3">
                {name && <p class="text-base font-semibold">{name}</p>}
                {job && <p class="text-xs text-muted">{job}</p>}
              </div>
            </div>
          </article>
        ))
    }
  </div>
  {
    callToAction && (
      <div class="flex justify-center mx-auto w-fit mt-8 md:mt-12 font-medium">
        <Button {...callToAction} />
      </div>
    )
  }
</WidgetWrapper>
