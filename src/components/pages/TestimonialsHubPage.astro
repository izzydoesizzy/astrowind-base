<script>
  const avatarToggle = document.getElementById('toggle-avatars') as HTMLInputElement | null;
  const ratingToggle = document.getElementById('toggle-ratings') as HTMLInputElement | null;

  const applyAvatarToggle = () => {
    document.querySelectorAll('.testimonial-avatar').forEach((avatar) => {
      const showAvatar = avatarToggle?.checked ?? true;
      avatar.classList.toggle('testimonial-avatar-show', showAvatar);
      avatar.classList.toggle('testimonial-avatar-hide', !showAvatar);
    });
  };

  const applyRatingToggle = () => {
    document.querySelectorAll('.testimonial-rating').forEach((rating) => {
      const showRating = ratingToggle?.checked ?? true;
      rating.classList.toggle('testimonial-rating-show', showRating);
      rating.classList.toggle('testimonial-rating-hide', !showRating);
    });
  };

  avatarToggle?.addEventListener('change', applyAvatarToggle);
  ratingToggle?.addEventListener('change', applyRatingToggle);

  applyAvatarToggle();
  applyRatingToggle();
</script>

