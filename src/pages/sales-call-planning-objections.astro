                      {item.tags.map((tag) => (
                        <span class="text-xs px-2 py-0.5 rounded-full bg-primary/10 text-primary font-medium">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
                <p class="text-muted leading-relaxed">{item.strategy}</p>
              </div>
              <div>
                <h4 class="text-sm font-semibold text-primary uppercase tracking-wider mb-2">Sample Script</h4>
                <div class="bg-gradient-to-r from-primary/5 to-primary/10 dark:from-primary/10 dark:to-primary/20 rounded-md p-4 border-l-4 border-primary">
                  <p class="text-slate-700 dark:text-slate-300 whitespace-pre-line leading-relaxed">{item.script}</p>
                </div>
              </div>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>
</Layout>
